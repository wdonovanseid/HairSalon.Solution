@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h2>Search Results</h2>
<hr />

<div class="box">
  <div class="inner-box">
    @if (@Model.Count == 0) 
    {
      <p>No clients matched!</p>
    }
    else
    {
      @foreach (Client client in Model)
      {
        <li>@Html.ActionLink($"{client.Name}", "Details", new {id = client.ClientId })</li>
      }
    }
  </div>
</div>