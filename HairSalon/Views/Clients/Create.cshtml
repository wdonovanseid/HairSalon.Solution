@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h4>Add a new Client</h4>

@using (Html.BeginForm())
{
  <table class="set-table">
    <tr>
      <td>@Html.LabelFor(model => model.Name)</td>
      <td>@Html.TextBoxFor(model => model.Name, new { @required = "required"})</td>
    </tr>
    <tr>
      <td>@Html.LabelFor(model => model.Details)</td>
      <td>@Html.TextAreaFor(model => model.Details, new { @class="big-input"})</td>
    </tr>
    <tr>
      <td>@Html.LabelFor(model => model.Stylist)</td>
      <td>@Html.DropDownList("StylistId")</td>
    </tr>
  </table>
  <input type="submit" value="Add new client" class="btn btn-default" />
}