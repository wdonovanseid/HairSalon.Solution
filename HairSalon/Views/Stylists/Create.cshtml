@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h4>Add a new Stylist</h4>

@using (Html.BeginForm())
{
  <table class="set-table">
    <tr>
      <td>@Html.LabelFor(model => model.Name)</td>
      <td>@Html.TextBoxFor(model => model.Name, new { @required = "required"} )</td>
    </tr>
    <tr>
      <td>@Html.LabelFor(model => model.Specialty)</td>
      <td>@Html.TextBoxFor(model => model.Specialty, new { @required = "required"} )</td>
    </tr>
    <tr>
      <td>@Html.LabelFor(model => model.Details)</td>
      <td>@Html.TextBoxFor(model => model.Details, new { @required = "required"} )</td>
    </tr>
  </table>
  <input type="submit" value="Add new Stylist" class="btn btn-default" />
}