@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist
@using HairSalon.Models

<h2>@Html.DisplayFor(model => model.Name)</h2>
<hr />
<table class="set-table">
  <tr>
    <td>@Html.DisplayNameFor(model => model.Specialty):</td>
    <td>@Html.DisplayFor(model => model.Specialty)</td>
  </tr>
  <tr>
    <td>@Html.DisplayNameFor(model => model.Details):</td>
    <td>@Html.DisplayFor(model => model.Details)</td>
  </tr>
</table>

<div class="box">
  <div class="inner-box">
    @if (@Model.Clients.Count == 0)
    {
      <p>No clients have been added yet!</p>
    } 
    @foreach (Client client in Model.Clients)
    {
      <li>@Html.ActionLink($"{client.Name}", "Details", "Clients", new { id = client.ClientId})</li>
    }
  </div>
</div>

<p>@Html.ActionLink("Add new client", "Create", "Clients")</p>
<p>@Html.ActionLink("Edit stylist", "Edit", new { id = Model.StylistId })</p>